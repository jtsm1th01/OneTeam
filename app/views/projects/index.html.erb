<% provide(:page_title, "Projects") %>

<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>OneTeam Projects</u></h1>
  </div>
</div>

<div class="row">
    <div class="col-md-12 lead"><u>
      <%= link_to 'New Project', new_project_path %></u>
    </div>
</div>

<% @projects.each do |project| %>

<div class="panel panel-info">
    <div class="panel-heading"><span class="entry_title">
      Project Name:</span>
      <%= project.project_name %>
    </div>

    <div class="panel-body"><span class="entry_title">
      Project Lead:</span>
      <%= project.lead.employee_name %>
    </div>
  
    <div class="panel-body"><span class="entry_title">
      Project Start Date:</span>
      <%= project.project_start %>
    </div>

    <div class="panel-body"><span class="entry_title">
      Project End Date:</span>
      <%= project.project_end %>
    </div>

    <div class="panel-body">
      <%= link_to 'Edit', edit_project_path(project) %>
      <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

  </div>

<% end %>

