<% provide(:page_title, "Log In") %>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: 'alert alert-danger' %>
<% end %>
  
<div class="jumbotron">
  <h1>Welcome to OneTeam</h1>
  <h2>Find your next great project.</h2>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, class: 'pull-left' %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, class: 'pull-left' %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :remember_me, class: 'checkbox inline pull-left' do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>
    
        <%= f.submit "Log in", class: "btn-primary" %>
      <% end %>

      <p>Need an account? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
  
</div>