<%= form_for(@project_request) do |f| %>
  <% if @project_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project_request.errors.count, "error") %> prohibited this project_request from being saved:</h2>

      <ul>
      <% @project_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :employee_id %><br>
    <%= f.number_field(:employee_id) %>
  </div>
  <div class="field">
    <%= f.label :project_id %><br>
    <%= f.collection_select(:project_id, @projects, :id, :project_name ) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date %>
  </div>
  <p>Skills:</p>
  <div class="field">
    <% @skills.each do |skill| %>
    <%= skill.skill_name %>
    <%= check_box_tag "project_request[required_skill_ids][]", skill.id, @project_request.required_skill_ids.include?(skill.id) %><br>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :filled, "Check if Filled" %><br>
    <%= f.check_box :filled %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
