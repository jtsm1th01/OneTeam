
  <%= form_for @project_request do |f| %>
    
    <% if @project_request.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@project_request.errors.count, "error") %>
          prohibited this project_request from being saved</h2>
        <ul>
          <% @project_request.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.hidden_field(:employee_id)%>
    </div>

    <div class="form-group">
      <%= f.label :project_id %><br>
      <%= f.collection_select(:project_id, @projects, :id, :project_name, {prompt: "Select Project..."}, {:class => "form-control"}) %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, {:class => "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.label :start_date %><br>
      <%= f.date_select :start_date %>
    </div>
    <div class="form-group">
      <%= f.label :end_date %><br>
      <%= f.date_select :end_date %>
    </div>

    <div class="row">
 
      <div class="col-md-1">
        <p>Skills:</p>
      </div>
      
      <div class="col-md-11">
        <div class="form-group">
          <% @skills.each do |skill| %>
            <%= skill.skill_name %>
            <%= check_box_tag "project_request[skill_ids][]", skill.id, @project_request.skill_ids.include?(skill.id) %><br>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :filled, "Check if Closed to New Applicants:" %>
      <%= f.check_box :filled %>
    </div>
    <div>
      <%= f.submit ("Create Project Request"), {:class => "btn btn-info"} %>
      <%= link_to 'Cancel', my_project_requests_path(current_employee), :class => 'btn btn-danger' %>
    </div>

  <% end %>


  

