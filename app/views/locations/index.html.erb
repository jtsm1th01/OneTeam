<% provide(:page_title, "Locations") %>

<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>OneTeam Locations</u></h1>
  </div>
</div>

<div class="row">
    <div class="col-md-12 lead"><u>
      <%= link_to 'New Location', new_location_path %></u>
    </div>
</div>

<% @locations.each do |location| %>

<div class="panel panel-info">
  <div class="panel-heading"><span class="entry_title">
    Location Name:</span>
    <%= location.location_name %>
  </div>

  <div class="panel-body">
    <%= link_to 'Edit', edit_location_path(location) %>
    <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>

</div>

<% end %>
