<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= pluralize(obj.errors.count, "error") %> prevented <%= obj.class %> from being saved.
    </div>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>