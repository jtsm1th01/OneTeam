<% provide(:page_title, "Skills") %>

<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>OneTeam Skills</u></h1>
  </div>
</div>

<div class="row">
    <div class="col-md-12 lead"><u>
      <%= link_to 'New Skill', new_skill_path %></u>
    </div>
</div>

<% @skills.each do |skill| %>

  <div class="panel panel-info">
    <div class="panel-heading"><span class="entry_title">
      Skill Name:</span>
      <%= skill.skill_name %>
    </div>

    <div class="panel-body">
      <%= link_to 'Edit', edit_skill_path(skill) %>
      <%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

  </div>

<% end %>