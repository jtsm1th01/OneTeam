<% provide(:page_title, "Skills") %>

<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>OneTeam Skills</u></h1>
  </div>
</div>

<div class="row">
  <%= link_to 'New Skill', new_skill_path, class:"btn btn-small btn-primary" %>
</div>

<% @skills.each do |skill| %>

<div class="panel panel-info">
  <div class="panel-heading"><span class="entry_title">
    Skill Name:</span>
    <%= skill.skill_name %>
  </div>

  <div class="panel-body">
    <%= link_to 'Edit Skill', edit_skill_path(skill), class:"btn btn-xs btn-primary" %>
    <%= link_to 'Delete Skill', skill, method: :delete,
                  data: { confirm: 'Are you sure?' }, class:"btn btn-xs btn-danger" %>
  </div>
</div>

<% end %>