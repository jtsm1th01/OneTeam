<% provide(:page_title, "Edit Application")%>

<h1 class="text-left"><u>Edit Application:</u></h1>

<%= form_for [@response], url: update_project_request_response_path do |f| %>

<div class="field">
  <%= f.label :note, 'Message to Project Lead:' %><br>
  <%= f.text_area :note %>
</div>

<div class="field">
  <%=f.submit "Update Application", class: "btn btn-primary btn-submit" %>
  <%= link_to "Cancel", :back, class: 'btn btn-danger btn-submit' %>
</div>

<% end %>
