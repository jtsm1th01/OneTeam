<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Skill</th>
      <th>Experience</th>
      <th>Skill level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.assignment_id %></td>
        <td><%= review.skill_id %></td>
        <td><%= review.experience %></td>
        <td><%= review.skill_level %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
