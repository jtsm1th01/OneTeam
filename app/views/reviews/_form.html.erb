
  <%= form_for @review do |f| %>
  <%= render 'shared/review_messages' %>

  <%= f.hidden_field :assignment_id, :value => @assignment.id %>

  <div class="h4">Employee's self-assessed skill level will appear as the default value. Experience days will default to the maximum, which is the length of the project. Please adjust as necessary.</div>

  <div class="panel">
      <%= f.fields_for :skill_reviews do |skill_review| %>
      <div class="row">
        <div class="col-md-12">
          <h4><%= label_tag "Skill: " %>
          <%= skill_review.object.skill.skill_name %></h4>
          <%= skill_review.hidden_field :skill_id, :value => skill_review.object.skill.id %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= skill_review.label :experience, "Experience Gained:" %>
        </div>
        <div class="col-md-2">
          <%= skill_review.number_field :experience, {class: "form-control", value: project_duration(@assignment.project_request), min: 0, max: project_duration(@assignment.project_request)} %>
        </div>
        <div class="col-md-1">Days</div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= skill_review.label :skill_level, "Skill Assessment: (1-Beg 2-Int 3-Adv 4-Expert)" %>
        </div>
      </div>
      <div class="row form-group form-radio">
        <div class="radio-inline">
          <%= skill_review.radio_button("skill_level", "0", {checked: (default_radio_value(@employee, skill_review.object.skill.id, 0))}) %>
        <%= skill_review.label :skill_level, 'N/A' %>
        </div>
        <div class="radio-inline">
        <%= skill_review.radio_button("skill_level", "1", {checked: (default_radio_value(@employee, skill_review.object.skill.id, 1))}) %>
        <%= skill_review.label :skill_level, '1' %>
        </div>
        <div class="radio-inline">
        <%= skill_review.radio_button("skill_level", "2", {checked: (default_radio_value(@employee, skill_review.object.skill.id, 2))}) %>
        <%= skill_review.label :skill_level, '2' %>
        </div>
        <div class="radio-inline">
        <%= skill_review.radio_button("skill_level", "3", {checked: (default_radio_value(@employee, skill_review.object.skill.id, 3))}) %>
        <%= skill_review.label :skill_level, '3' %>
        </div>
        <div class="radio-inline">
        <%= skill_review.radio_button("skill_level", "4", {checked: (default_radio_value(@employee, skill_review.object.skill.id, 4))}) %>
        <%= skill_review.label :skill_level, '4' %>
        </div>
      </div>
    <% end %>
</div>
    
    <div class="actions">
      <%= f.submit "Submit Review", class: "btn btn-primary btn-submit" %>
    </div>
<% end %>
