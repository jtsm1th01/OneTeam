<% provide(:page_title, "Dept") %>

<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>OneTeam Departments</u></h1>
  </div>
</div>

<div class="row">
    <div class="col-md-12 lead"><u>
      <%= link_to 'New Department', new_department_path %></u>
    </div>
</div>

<% @departments.each do |department| %>

<div class="panel panel-info">
    <div class="panel-heading"><span class="entry_title">
      Department Name:</span>
      <%= department.department_name %>
    </div>

    <div class="panel-body">
      <%= link_to 'Edit', edit_department_path(department) %>
      <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

  </div>

<% end %>