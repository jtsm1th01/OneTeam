<% provide(:page_title, "Dept") %>

<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>OneTeam Departments</u></h1>
  </div>
</div>

<div class="row">
  <%= link_to 'New Department', new_department_path, class:"btn btn-small btn-primary" %>
</div>

<% @departments.each do |department| %>

<div class="panel panel-info">
  <div class="panel-heading"><span class="entry_title">
    Department Name:</span>
    <%= department.department_name %>
  </div>

  <div class="panel-body">
    <%= link_to 'Edit Department', edit_department_path(department), class:"btn btn-xs btn-primary" %>
    <%= link_to 'Delete Department', department, method: :delete,
                              data: { confirm: 'Are you sure?' }, class:"btn btn-xs btn-danger" %>
  </div>
</div>

<% end %>