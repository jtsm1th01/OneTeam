<h1>Listing employees</h1>

<table>
  <thead>
    <tr>
      <th>Employee Name</th>
      <th>Employee Email</th>
      <th>Years with Company</th>
      <th>Manager/Lead</th>
      <th>Position</th>
      <th>Department</th>
      <th>Group</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.employee_name %></td>
        <td><%= employee.employee_email %></td>
        <td><%= employee.years_with_company %></td>
        <td><%= employee.employee_id %></td>
        <td><%= employee.title_id %></td>
        <td><%= employee.group_id %></td>
        <td><%= employee.location_id %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

