<% provide(:page_title, "Titles") %>

<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>OneTeam Titles</u></h1>
  </div>
</div>

<div class="row">
    <div class="col-md-12 lead"><u>
      <%= link_to 'New Title', new_title_path %></u>
    </div>
</div>

<% @titles.each do |title| %>

  <div class="panel panel-info">
    <div class="panel-heading"><span class="entry_title">
      Title Name:</span>
      <%= title.title_name %>
    </div>

    <div class="panel-body">
      <%= link_to 'Edit', edit_title_path(title) %>
      <%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

  </div>

<% end %>
