
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-left"><u>Employee Profile</u></h1>
    </div>
  </div> 
  
  <div class="row">
    <% if @employee == current_employee %>
      <div class="col-md-12 lead"><u>
        <%= link_to 'Edit Profile', edit_employee_path(@employee) %></u>
      </div>
    <% end %>
  </div>

  <div class="panel panel-info">
    
    <div class="row panel-body">

      <div class="col-md-3 panel-body">
        <img src="/assets/user.png" class="img-responsive" alt="user silhouette">
      </div>

      <div class="col-md-9 panel-body">
        <div class="panel-body">
          <span class="entry_title">Name:</span>
          <%= @employee.employee_name %>
        </div>

        <div class="panel-body">
          <span class="entry_title">Email:</span>
          <%= @employee.employee_email %>
        </div>

        <div class="panel-body">
          <span class="entry_title">Years with Company:</span>
          <%= @employee.try(:years_with_company) %>
        </div>

        <div class="panel-body">
          <span class="entry_title">Manager/Lead:</span>
          <%= @employee.try(:manager).try(:employee_name) %>
        </div>

        <div class="panel-body">
          <span class="entry_title">Position:</span>
          <%= @employee.try(:title).try(:title_name) %>
        </div>

        <div class="panel-body">
          <span class="entry_title">Department:</span>
          <%= @employee.try(:group).try(:department).try(:department_name) %>
        </div>

        <div class="panel-body">
          <span class="entry_title">Group:</span>
          <%= @employee.try(:group).try(:group_name) %>
        </div>

        <div class="panel-body">
          <span class="entry_title">Location:</span>
          <%= @employee.try(:location).try(:location_name) %>
        </div>

        <div class="row panel-body">
          <div class="col-md-3">
            <span class="entry_title">Current Skills:</span>
          </div>
          <div class="col-md-9">
            <span class="entry_title">Level (1-beg 2-int 3-adv 4-expert):</span>
          </div>
        </div>
        <% @employee.current_skills.each do |current_skill| %>
        <div class="row panel-body">
          <div class="col-md-3">
            <%= current_skill.skill.skill_name %>
          </div>
          <div class="col-md-2">
            <%= current_skill.skill_level %>
          </div>
        </div>
        <% end %>
        

        <div class="row panel-body">
          <div class="col-md-3">
            <span class="entry_title">Desired Skills:</span>
          </div>
        </div>
        <% @employee.desired_skills.each do |desired_skill| %>
        <div class="row panel-body">
          <div class="col-md-12">
            <%= desired_skill.skill.skill_name %>
          </div>  
        </div>
        <% end %>
        
        <div class="row panel-body">
          <div class="col-md-2">
            <span class="entry_title">Project Assignments:</span>
          </div>
          <div class="col-md-3">
            <% @employee.assignments.each do |assignment| %>
              <ul>
                <li><%= assignment.project_request.project.project_name %></li>
              </ul>
            <% end %>
          </div>
        </div>
        
        <div class="panel panel-info">
          <div class="row panel-body">
          <div class="col-md-2">
            <span class="entry_title">OneTeam History:</span>
          </div>
          <div class="col-md-2">
            <span class="entry_title">Project:</span>
          </div>
          <div class="col-md-2">
            <span class="entry_title">Skill:</span>
          </div>
          <div class="col-md-2">
            <span class="entry_title">Experience Gained (Days):</span>
          </div>
          <div class="col-md-2">
            <span class="entry_title">Skill Level Assessment:</span>
          </div>
        </div>
        <div class="row panel-body">
          <div class="col-md-2 col-md-offset-2">Overall</div>
        </div>
        
        <% @experience_totals.each do |skill, experience| %>
        <div class="row">
          <div class="col-md-2 col-md-offset-4">
            <%= skill %>
          </div>
          <div class="col-md-2 col-md">
            <%= experience %>
          </div>
        </div>
          <% end %>
          
          <% @skill_level_averages.each do |skill, skill_level_avg| %>
          <div class="row">
          <div class="col-md-2 col-md-offset-4">
            <%= skill %>
          </div>
          <div class="col-md-2 col-md">
            <%= skill_level_avg %>
          </div>
        </div>
          <% end %>
          
        <% @employee.assignments.each do |assignment| %>
        
        <div class="row panel-body">
          <div class="col-md-2 col-md-offset-2">
            <%= assignment.project_request.project.project_name %>
          </div>
        </div>
          <% assignment.review.skill_reviews.each do |skill_review| %>
            <div class="row">
              <div class="col-md-2 col-md-offset-4">
                <%= skill_review.skill.skill_name %>
              </div>
              <div class="col-md-2">
                <%= skill_review.experience %>
              </div>
              <div class="col-md-2">
                <%= skill_review.skill_level %>
              </div>
            </div>
          <% end %>
        <% end %>
        </div>
      
    </div>
 
  </div>
    
    <%= link_to "Back", :back, class: 'btn btn-danger' %>
    
    

    
    








