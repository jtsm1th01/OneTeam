
<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>Employee Profiles</u></h1>
  </div>
</div>

<% if current_employee.admin? %>
  <%= link_to 'New Employee', new_employee_path %>
<% end %>

<% @employees.each do |employee| %>

  <div class="panel panel-info">

    <div class="panel-heading"><span class="entry_title">
      Name:</span>
      <%= employee.employee_name %>
    </div>

    <div class="panel-body"><span class="entry_title">
      Email:</span>
      <%= employee.employee_email %>
    </div>

    <div class="panel-body"><span class="entry_title">
      Position:</span>
      <%= employee.try(:title).try(:title_name) %>
    </div>

    <div class="panel-body"><span class="entry_title">
      Location:</span>
      <%= employee.try(:location).try(:location_name) %>
    </div>
    
    <div class="panel-body">
        <%= link_to 'Full Profile', employee_path(employee) %>
    </div>
    
    <% if current_employee == employee %>
      <div class="panel-body">
        <%= link_to 'Edit', edit_employee_path(employee) %>
      </div>
    <% end %>
      
    <% if current_employee.admin? && !current_employee?(employee) %>
      <div class="panel-body">
        <%= link_to "Delete", employee, method: :delete,
        data: { confirm: "You sure?" } %>
      </div>
    <% end %>
    
  </div>    

<% end %>



