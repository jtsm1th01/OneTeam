
<div class="row">
  <div class="col-md-12">
    <h1 class="text-left"><u>All Employees</u></h1>
  </div>
</div>

<% if current_employee.admin? %>
  <div class="row">
    <%= link_to 'Add Employee', new_employee_path, class:"btn btn-small btn-primary" %></u>
  </div>
<% end %>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Department</th>
    <th>Position</th>
    <th>Location</th>
  </tr>

  <% @employees.each do |employee| %>
    <tr>
      <td><%= link_to employee.employee_name, employee_path(employee) %></td>
      <td><%= employee.try(:department).try(:department_name) %></td>
      <td><%= employee.try(:title).try(:title_name) %></td>
      <td><%= employee.try(:location).try(:location_name) %></td>
    </tr>
  <% end %>

</table>


    

      

    





